<SWLabelWithTitle>:
    adaptive_height:True
    md_bg_color:root.color
    radius:dp(7),dp(7),dp(7),dp(7)
    padding:dp(4)
    orientation:'vertical'
    MDBoxLayout:
        size_hint_y:None
        height:dp(35)
        MDLabel:
            text:root.title
            font_style:'Overline'
            font_size:dp(22)
            halign:'center'
            bold:True
            color:root.text_color
    MDBoxLayout:
        md_bg_color:1,1,1,1
        radius:dp(7),dp(7),dp(7),dp(7)
        size_hint_y:None
        height:dp(35)
        padding:dp(5),dp(0)
        MDLabel:
            text:root.text_start+root.text+root.text_end
            font_style:'Overline'
            font_size:dp(22)
            halign:'right'