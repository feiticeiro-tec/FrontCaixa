#: import MDApp kivymd.app.MDApp
<Index>:
    MDBoxLayout:
        padding:dp(7)
        md_bg_color:85/255,85/255,95/255,1
        MDBoxLayout:
            orientation:'vertical'
            spacing:dp(5)
            MDBoxLayout:
                size_hint_y:None
                height:dp(50)
                spacing:dp(5)
                MDBoxLayout:
                    radius:dp(7),dp(7),dp(7),dp(7)
                    md_bg_color:24/255,24/255,35/255,1
                    MDLabel:
                        text:'Caixa Aberto'
                        font_style:'Overline'
                        font_size:dp(22)
                        halign:'center'
                        bold:True
                        color:1,1,1,1
                        
                MDIconButton:
                    md_bg_color:24/255,24/255,35/255,1
                    icon:'account'
                    theme_text_color:'Custom'
                    text_color:1,1,1,1

            MDBoxLayout:
                spacing:dp(5)
                MDBoxLayout:
                    md_bg_color:1,0,0,1
                MDBoxLayout:
                    orientation:'vertical'
                    adaptive_width:True
                    spacing:dp(5)
                    pos_hint:{'top':1}
                    MDBoxLayout:
                        orientation:'vertical'
                        radius:dp(7),dp(7),dp(7),dp(7)
                        md_bg_color:24/255,24/255,35/255,1
                        adaptive_width:True
                        padding:dp(4)
                        MDBoxLayout:
                            size_hint_y:None
                            height:dp(35)
                            MDLabel:
                                text:'Produtos Adicionados'
                                font_style:'Overline'
                                font_size:dp(22)
                                halign:'center'
                                bold:True
                                color:1,1,1,1
                        MDBoxLayout:
                            id:table
                            size_hint_x:None
                            md_bg_color:1,1,1,1
                            width:dp(690)
                    MDBoxLayout:
                        adaptive_height:True
                        md_bg_color:24/255,24/255,35/255,1
                        radius:dp(7),dp(7),dp(7),dp(7)
                        padding:dp(4)
                        orientation:'vertical'
                        MDBoxLayout:
                            size_hint_y:None
                            height:dp(35)
                            MDLabel:
                                text:'Sub Total'
                                font_style:'Overline'
                                font_size:dp(22)
                                halign:'center'
                                bold:True
                                color:1,1,1,1
                        MDBoxLayout:
                            md_bg_color:1,1,1,1
                            radius:dp(7),dp(7),dp(7),dp(7)
                            size_hint_y:None
                            height:dp(35)
                            padding:dp(5),dp(0)
                            MDLabel:
                                text:'R$ '+str(root.sub_total)
                                font_style:'Overline'
                                font_size:dp(22)
                                halign:'right'
                                
                    MDBoxLayout:
                        spacing:dp(10)
                        adaptive_height:True
                        MDBoxLayout:
                            adaptive_height:True
                            md_bg_color:24/255,24/255,35/255,1
                            radius:dp(7),dp(7),dp(7),dp(7)
                            padding:dp(4)
                            orientation:'vertical'
                            MDBoxLayout:
                                size_hint_y:None
                                height:dp(35)
                                MDLabel:
                                    text:'Total Recebido'
                                    font_style:'Overline'
                                    font_size:dp(22)
                                    halign:'center'
                                    bold:True
                                    color:1,1,1,1
                            MDBoxLayout:
                                md_bg_color:1,1,1,1
                                radius:dp(7),dp(7),dp(7),dp(7)
                                size_hint_y:None
                                height:dp(35)
                                padding:dp(5),dp(0)
                                TextInput:
                                    id:total_recebido
                                    text:'0'
                                    font_style:'Overline'
                                    font_size:dp(20)
                                    halign:'right'
                                    multiline:False
                                    write_tab:False
                                    input_filter:'float'
                                    background_color:0,0,0,0
                                    
                        MDBoxLayout:
                            adaptive_height:True
                            md_bg_color:24/255,24/255,35/255,1
                            radius:dp(7),dp(7),dp(7),dp(7)
                            padding:dp(4)
                            orientation:'vertical'
                            MDBoxLayout:
                                size_hint_y:None
                                height:dp(35)
                                MDLabel:
                                    text:'Troco'
                                    font_style:'Overline'
                                    font_size:dp(22)
                                    halign:'center'
                                    bold:True
                                    color:1,1,1,1
                            MDBoxLayout:
                                md_bg_color:1,1,1,1
                                radius:dp(7),dp(7),dp(7),dp(7)
                                size_hint_y:None
                                height:dp(35)
                                padding:dp(5),dp(0)
                                MDLabel:
                                    text:'R$ '+str(float(total_recebido.text.replace('R$','')) - root.sub_total) if total_recebido.text else 'R$ '+str(-root.sub_total)
                                    font_style:'Overline'
                                    font_size:dp(22)
                                    halign:'right'
                                    
                            
                                
